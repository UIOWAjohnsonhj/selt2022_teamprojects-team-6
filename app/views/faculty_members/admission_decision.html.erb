<div class="Decision">
  <h1> Welcome <%= @faculty.first_name%> <%=@faculty.last_name%></h1>

  <div class="student_table">
    <table>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Current Decision</th>
        <th>Review Profile</th>
      </tr>
      <% @student_app_dict.each do |student, app| %>
        <tr>
          <td><%= student.first_name %></td>
          <td><%= student.last_name %></td>
          <td><%= student.email %></td>
          <td><%= app.application_status %></td>
          <td><%= link_to "Review", profile_viewer_path(app, student_id: student.id, professor_id: @faculty.id) %></td>
        </tr>
      <% end %>
    </table>

  </div>

</div>
