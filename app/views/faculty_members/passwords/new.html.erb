<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "faculty_members/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.submit "Send me reset password instructions" %>
    <br/>
  </div>
<% end %>

<%= form_for(resource, as: resource_name, url: root_path, html: { method: :get }) do |f| %>
  <div class="field">
    <%= f.submit "Home" %>
  </div>
<% end %>
