%h1 Sign Up

= form_tag general_sign_up_path, :method => :get do
  = submit_tag "Back", :id => "back_button"

=form_tag main_intermediate_sign_up_path, :method=>:post do
  =label :label, :first_name
  =text_field :user, :first_name
  =label :label, :last_name
  =text_field :user, :last_name
  =label :label, :email_address
  =text_field :user, :email
  =label :label, :password
  = password_field :user, :password
  =label :label, :University
  %select{ :name => "uni" }
    -University.all.each do |u|
      %option{:value => u.name}= u.name
  =label :label, :Department
  %select{ :name => "dept" }
    -Department.all.each do |u|
      %option{:value => u.id}= u.name
  %br/
  %br/

  = submit_tag "Create Account", :id => "create_account_button"
