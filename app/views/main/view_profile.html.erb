<h1>Profile</h1>
<h2>Hi <%= @student.first_name %></h2>

<div class="profile">
  <div class="profile_features">
    <br>
    <form method="post" action="<%= main_edit_profile_path %>">
      <br>
      <div class="row">
        <label class="label" style="margin-right: auto; margin-left: 15px">GRE</label>
        <label class="label" style="margin-right: auto; margin-left: 15px">TOEFL</label>
        <label class="label" style="margin-right: auto; margin-left: 15px">CAPA</label>
      </div>

      <div class="row">
        <input value="<%= @current_profile.gre %>" class="field" name="gre" readonly >
        <input value="<%= @current_profile.toefl %>" class="field" name="toefl" readonly>
        <input value="<%= @current_profile.capa %>" class="field" name="capa" readonly>
      </div>
      <br>
      <div class="row">
        <label class="label" style="margin-right: auto; margin-left: 15px">Intrested Major</label>
        <label class="label" style="margin-right: auto; margin-left: 15px">Term</label>
        <label class="label" style="margin-right: auto; margin-left: 15px">Year</label>
      </div>

      <div class="row">
        <input value="<%= @current_profile.interested_major %>" list="majors" class="field" name="major" readonly>
        <input value="<%= @current_profile.term %>" list="term" class="field" name="term" readonly>
        <input value="<%= @current_profile.year %>" list="year" class="field" name="year" readonly>

        <br>
      </div>
      <br>

      <div class="row">
        <label class="label" style="margin-right: auto; margin-left: 15px">Undergraduate college</label>
      </div>
      <div class="row">
        <input value="<%= @current_profile.college_name %>" class="field2" name="college_name" readonly>
      </div>
      <br>
      <h2>Work experience</h2>
      <br>
      <div class="row" >
        <label class="label" style="margin-right: auto; margin-left: 0">Company name</label>
        <label class="label" style="margin-right: auto; margin-left: 0">Job title</label>
        <label class="label" style="margin-right: auto; margin-left: 0">Description</label>
        <label class="label" style="margin-right: auto; margin-left: 0">Start Date</label>
        <label class="label" style="margin-right: auto; margin-left: 0">End Date</label>
      </div>
      <br>
      <div class="row" >
        <input class="field2" name="company" readonly>
        <input class="field2" name="position" readonly>
        <input class="field2" name="description" readonly>
        <input class="field2" name="from" readonly>
        <input class="field2" name="to" readonly>

      </div>
      <br>
      <br>
      <input type="submit" class = "btn" value="Edit profile">

      <br>
    </form>
    <br>
  </div>

  <div class="profile_features2">
    <div class="vl"></div>
  </div>
  <div class="profile_features">
    <h1>Universities Applied</h1>
    <% @applied_Departments.each do |k,v| %>
      <br>
      <h2><%=k %></h2>
      <table>
        <tr>
          <th>Department</th>
          <th>Status</th>
        </tr>
        <%v.each do |a| %>
        <tr>
          <td><%=a %></td>
          <td>pending</td>
        </tr>
        <%end %>
      </table>
      <br>
    <%end %>
  </div>
</div>

